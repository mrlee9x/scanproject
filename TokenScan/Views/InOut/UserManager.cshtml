        function EditUser() {
            var email = document.getElementById("email-input").value;
            var pass = document.getElementById("pass-input").value;
            var role = document.getElementById("role-input").value;
            var date = document.getElementById("date-input").value;
            if (email != '' && email != null && pass != '' && pass != null && role != '' && role != null && date != '' && date != null) {
                $.post(
                    "/InOut/EditUser",
                    { email: email, pass: pass, role: role, date: date },
                    function (data) {
                        alert(data);
                    });
            }
            else {
                alert("Please fill in the required information form");
            }



